<section class="fullscreen" style="margin-top: 10%;">
    <form  onsubmit="validateForm()" name="contactform" class="centerform">
      <div id="contactbox"> 
        <div id="contact-us" class="form-group">Contact Us</div>
      <div class="form-group">
        <label for="exampleFormControlInput1" class="lbl">Email</label>
        <input required="true" type="email" class="form-control inputs purple-border" name="email" id="email" placeholder="name@example.com">
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1" class="lbl">Feedback</label>
        <textarea required="true" class="form-control purple-border" id="inputs" rows="5" name="feedback" placeholder="Provide your feedback here."></textarea>
      </div>
      <div class="wrap">
        <button onclick="validateForm()" type="submit" class="button">Submit</button>
      </div>
    </div>
    </form>
  </section>