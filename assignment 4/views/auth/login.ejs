<section style="margin-top: 10%;">
  
    <% if (flash) { %>
      <div class="alert alert-<%= flash.type %>">
        <%= flash.message %>
      </div>
    <% } %>
   

    <form name="loginForm" id="loginForm" class="centerform" action="/login" method="POST">
        <div id="loginbox"> 
          <div id="contact-us" class="form-group">Login to Continue</div>
          <div class="form-group">
            <label class="lbl">Email</label>
            <input required="true" type="email" class="form-control inputs purple-border" name="email" id="email" placeholder="name@example.com">
          </div>
          <div class="form-group">
            <label class="lbl">Password</label>
            <input required="true" type="password" class="form-control purple-border" id="password" name="password" placeholder="Enter your password">
          </div>
          <div class="wrap">
            <button type="submit" class="button">Login</button>
          </div>
          <div class="wrap text-center">
            <p>Don't have an account? <a href="/register" class="text-link">Sign up</a></p>
          </div>
        </div>
      </form>
</section>
